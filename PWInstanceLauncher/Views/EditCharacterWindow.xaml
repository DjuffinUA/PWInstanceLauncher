<Window x:Class="PWInstanceLauncher.Views.EditCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Character" Height="380" Width="360" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/gragon.png" Stretch="None"/>
    </Window.Background>
    <StackPanel Margin="10">
        <TextBlock Text="Name" />
        <TextBox x:Name="NameBox" Margin="0,4,0,8"/>

        <TextBlock Text="Login" />
        <TextBox x:Name="LoginBox" Margin="0,4,0,8"/>

        <TextBlock Text="Password" />
        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,4"/>
        <TextBlock x:Name="PasswordHint"
                   Text="Leave empty to keep current password"
                   Foreground="White"
                   Margin="0,0,0,8"/>

        <TextBlock Text="Character image" Foreground="White"/>
        <StackPanel Orientation="Horizontal" Margin="0,4,0,8">
            <Border Width="32" Height="32" BorderBrush="White" BorderThickness="1" Margin="0,0,10,0">
                <Image x:Name="SelectedImagePreview" Width="32" Height="32" Stretch="Fill"/>
            </Border>
            <ComboBox x:Name="ImagePathBox"
                      Width="270"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Path"
                      SelectionChanged="ImagePathBox_SelectionChanged"
                      Foreground="Black"/>
        </StackPanel>

        <Button Content="Save" Click="Save_Click" Margin="0,8,0,0"/>
    </StackPanel>
</Window>
