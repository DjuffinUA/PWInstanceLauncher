<Window x:Class="PWInstanceLauncher.Views.EditCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Character" Height="260" Width="320" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Name" />
        <TextBox x:Name="NameBox" Margin="0,4,0,8"/>

        <TextBlock Text="Login" />
        <TextBox x:Name="LoginBox" Margin="0,4,0,8"/>

        <TextBlock Text="Password" />
        <PasswordBox x:Name="PasswordBox" Margin="0,4,0,4"/>
        <TextBlock x:Name="PasswordHint"
                   Text="Leave empty to keep current password"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,8"/>

        <Button Content="Save" Click="Save_Click" Margin="0,8,0,0"/>
    </StackPanel>
</Window>
