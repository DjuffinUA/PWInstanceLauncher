<Window x:Class="PWInstanceLauncher.Views.EditCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PWInstanceLauncher.Views"
        mc:Ignorable="d"
        Title="Edit Character" Height="250" Width="300">
    <StackPanel Margin="10">

        <TextBox x:Name="NameBox"  Margin="0,5"/>
        <TextBox x:Name="LoginBox" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
        <Button Content="Save" Click="Save_Click" Margin="0,10"/>

    </StackPanel>
</Window>
