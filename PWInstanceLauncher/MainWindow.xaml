<Window x:Class="PWInstanceLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PW Instance Launcher"
        Height="400" Width="350">

    <StackPanel Margin="10">

        <TextBlock Text="Launch Mode:" VerticalAlignment="Center" Margin="0,0,10,0"/>

        <ComboBox Width="180"
              SelectedItem="{Binding Config.LaunchMode, Mode=TwoWay}">
            <ComboBoxItem Content="Separate Desktop"/>
            <ComboBoxItem Content="Current Desktop"/>
        </ComboBox>

        <Button Content="Add Character"
                Command="{Binding AddCharacterCommand}"
                Margin="0,0,0,10"/>

        <ItemsControl ItemsSource="{Binding Characters}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="{Binding Name}" Width="150"/>
                        <Button Content="Launch"
                                Command="{Binding DataContext.LaunchCommand,
                                RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                        <Button Content="Edit"
                                Click="Edit_Click"
                                Margin="5,0"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</Window>
